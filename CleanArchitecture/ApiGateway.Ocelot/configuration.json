{
  "Routes": [
    // Example Api
    {
      "DownstreamPathTemplate": "/api/{version}/{controller}/{todo}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }, // Add Load Balancing
        {
          "Host": "localhost",
          "Port": 6001
        }
      ],
      "UpstreamPathTemplate": "/api/{version}/{controller}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "SwaggerKey": "ExampleApi",
      // Add Load Balancing
      "LoadBalancer": "RoundRobin", // "LeastConnection"
      // Add rate limiting
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1s", // Số lần request trong 1s
        "PeriodTimespan": 1, // Thử lại sau 1s
        "Limit": 1 // Số lần request
      },
      //// Add QoS (QoS giống Polly)
      //"QoSOptions": {
      //  "ExceptionsAllowedBeforeBreaking": 2, // If the server does not response for 2 seconds, it will throw a timeout exception.
      //  "DurationOfBreak": 5000, // If the server throws a second exception, the server will not be accessible for five seconds. Unit (ms)
      //  "TimeoutValue": 2000
      //},
      "AuthenticationOptions": {
        //"AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    // Other Api
    {
      "DownstreamPathTemplate": "/api/{version}/{controller1}/{todo}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/{version}/{controller1}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "SwaggerKey": "OrtherApi"
      //"AuthenticationOptions": {
      //"AuthenticationProviderKey": "TestKey",
      //"AllowedScopes": []
      //}
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "ExampleApi",
      "TakeServersFromDownstreamService": true,
      "Config": [
        {
          "Name": "Example Api",
          "Version": "v1",
          "Url": "http://localhost:5001/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "OrtherApi",
      "TakeServersFromDownstreamService": true,
      "Config": [
        {
          "Name": "Orther Api",
          "Version": "v1",
          "Url": "http://localhost:5002/swagger/v1/swagger.json"
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    //"BaseUrl": "http://localhost",
    // Custom rate limiting
    "RateLimitOptions": {
      "DisableRateLimitHeaders": false,
      "QuotaExceededMessage": "Customize Tips!",
      "HttpStatusCode": 500
    }
  }
}
